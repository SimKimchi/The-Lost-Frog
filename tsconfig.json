{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/phaser/types",
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["Phaser"]
  },
  "include": ["./src/**/*"]
}
